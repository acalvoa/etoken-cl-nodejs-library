{
    "compilerOptions": {
        "outDir": "./release/",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ]
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}